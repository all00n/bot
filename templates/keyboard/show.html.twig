{{ render(controller('App\\Controller\\HeaderController::index',{'title':'Редактирование клавиатуры'})) }}

    <h1>{{ title }}</h1>
    
    <form action ="{{ path('keyboard_edit',{'slug':keyboard.id}) }}" method="post" class="form-horizontal">
        <div class="form-group">
            <label for="key" class="col-sm-2 control-label">Описание</label>
            <div class="col-sm-10">
                <textarea name="key" class="form-control" rows="3" id="key">{{keyboard.key}}</textarea>
                {% if errors.key is defined %}
                    <span class="text-danger">Заполните полу</span>
                {% endif %}
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Сохранить</button>
                <a type="submit" class="btn btn-default" href="{{path('keyboard')}}">Отмена</a>
            </div>
        </div>
    </form>

        
    

