{{ render(controller('App\\Controller\\HeaderController::index',{'title':'Редактирование контакта'})) }}

    <h1>{{ title }}</h1>
    
    <form action ="{{ path('contact_save',{'slug':contact.id}) }}" method="post" class="form-horizontal">
        <div class="form-group">
            <label for="post_description" class="col-sm-2 control-label">Описание</label>
            <div class="col-sm-10">
                <textarea name="description" class="form-control" rows="3" id="post_description">{{contact.description}}</textarea>
                {% if errors.description is defined %}
                    <span class="text-danger">Заполните полу</span>
                {% endif %}
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Сохранить</button>
                <a type="submit" class="btn btn-default" href="{{path('contact')}}">Отмена</a>
            </div>
        </div>
    </form>

        
    

