{{ render(controller('App\\Controller\\HeaderController::index',{'title':'Отправка ответа'})) }}

    <h1>{{ title }}</h1>
    
    <form action ="{{ path('review_reply',{'slug':review.id}) }}" method="POST" class="form-horizontal">
        <div class="form-group">
            <label for="post_description" class="col-sm-2 control-label">Отзыв</label>
            <div class="col-sm-10">
                <p>{{review.review}}</p>
            </div>
            <label for="post_description" class="col-sm-2 control-label">Ответ</label>
            <div class="col-sm-10">
                <textarea name="reply" class="form-control" rows="3" id="post_description"></textarea>
                {% if errors.reply is defined %}
                    <span class="text-danger">Заполните поле</span>
                {% endif %}
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Отправить</button>
                <a type="submit" class="btn btn-default" href="{{path('review')}}">Отмена</a>
            </div>
        </div>
    </form>

        
    

