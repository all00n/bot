{{ render(controller('App\\Controller\\HeaderController::index',{'title':'Редактирование контакта'})) }}

    <h1>{{ title }}</h1>
    
    <form action ="{{ path('facts_edit',{'slug':fact.id}) }}" method="POST" class="form-horizontal">
        <div class="form-group">
            <label for="post_description" class="col-sm-2 control-label">Описание</label>
            <div class="col-sm-10">
                <textarea name="fact" class="form-control" rows="3" id="post_description">{{fact.fact}}</textarea>
                {% if errors.fact is defined %}
                    <span class="text-danger">Заполните поле</span>
                {% endif %}
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Сохранить</button>
                <a type="submit" class="btn btn-default" href="{{path('facts')}}">Отмена</a>
            </div>
        </div>
    </form>

        
    

