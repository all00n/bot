{{ render(controller('App\\Controller\\HeaderController::index',{'title':'Редактирование заказа'})) }}

    <h1>{{ title }}</h1>
    
    <form action ="{{ path('reserve_edit',{'slug':reserve.id}) }}" method="post" class="form-horizontal">
        <div class="form-group">
            <label for="reserve_name" class="col-sm-2 control-label">Имя</label>
            <div class="col-sm-10">
                <input name="name" class="form-control" rows="3" id="reserve_name" value="{{reserve.name}}">
                {% if errors.name is defined %}
                    <span class="text-danger">Заполните поле</span>
                {% endif %}
            </div>
        </div>
        <div class="form-group">
            <label for="reserve_phone" class="col-sm-2 control-label">Телефон</label>
            <div class="col-sm-10">
                <input name="phone" class="form-control" rows="3" id="reserve_phone" value="{{reserve.phone}}">
                {% if errors.phone is defined %}
                    <span class="text-danger">Заполните поле</span>
                {% endif %}
            </div>
        </div>
        <div class="form-group">
            <label for="reserve_time" class="col-sm-2 control-label">Время</label>
            <div class="col-sm-10">
                <input name="time" class="form-control" rows="3" id="reserve_time" value="{{reserve.time}}">
                {% if errors.time is defined %}
                    <span class="text-danger">Заполните поле</span>
                {% endif %}
            </div>
        </div>
        <div class="form-group">
            <label for="reserve_count" class="col-sm-2 control-label">Количество</label>
            <div class="col-sm-10">
                <input name="count" class="form-control" rows="3" id="reserve_count" value="{{reserve.count}}">
                {% if errors.count is defined %}
                    <span class="text-danger">Заполните поле</span>
                {% endif %}
            </div>
        </div>
        <div class="form-group">
            <label for="reserve_date" class="col-sm-2 control-label">Дата</label>
            <div class="col-sm-10">
                <input name="date" class="form-control" rows="3" id="reserve_date" value="{{reserve.date}}">
                {% if errors.date is defined %}
                    <span class="text-danger">Заполните поле</span>
                {% endif %}
            </div>
        </div>
        <div class="form-group">
            <label for="reserve_date" class="col-sm-2 control-label">Комментарий</label>
            <div class="col-sm-10">
                <textarea name="comment" class="form-control" rows="3" id="reserve_date">{{reserve.comment}}</textarea>
                {% if errors.comment is defined %}
                    <span class="text-danger">Заполните поле</span>
                {% endif %}
            </div>
        </div>
        <div class="form-group">
            <label for="reserve_date" class="col-sm-2 control-label"></label>
            <div class="col-sm-10">
                <select class="form-control" name="status[]">
                    <option value="0" {%if reserve.status == 0%} selected {%endif%}>Актуальный</option>
                    <option value="1" {%if reserve.status == 1%} selected {%endif%}>Отменить</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Сохранить</button>
                <a type="submit" class="btn btn-default" href="{{path('home')}}">Отмена</a>
            </div>
        </div>
    </form>

        
    

